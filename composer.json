{
    "name": "photosynthesic/mysnowmonkey",
    "description": "My Snow Monkey Starter Kit",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "authors": [
      {
        "name": "photosythesic",
        "email": "yy@photosynthesic.jp"
      }
    ],
    "require": {
      "php":">=7.0"
    },
    "require-dev": {
      "squizlabs/php_codesniffer": "^3.4.2",
      "wp-coding-standards/wpcs": "^2.0",
      "phpcompatibility/phpcompatibility-wp": "^2.0",
      "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
      "10up/wp_mock": "0.4.2",
      "phpunit/phpunit": "7.5.20"
    },
    "scripts": {
      "post-install-cmd": [
        "phpcs -i"
      ],
      "phpcs": [
        "phpcs wp-content/plugin/my-snow-monkey -p -s -v -n --standard=./.phpcs.xml.dist --extensions=php"
      ],
      "fix": [
        "phpcs wp-content/plugin/my-snow-monkey -p -s -v -n --standard=./.phpcs.xml.dist --extensions=php --report-diff=changes.diff; patch -p0 -ui changes.diff; rm changes.diff"
      ]
    }
  }
